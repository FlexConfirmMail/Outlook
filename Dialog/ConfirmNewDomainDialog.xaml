<UserControl x:Class="FlexConfirmMail.Dialog.ConfirmNewDomainDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlexConfirmMail.Dialog"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="450">
    <Grid Background="Red">
        <TextBlock x:Name="textBlockTitle" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" TextAlignment="Center" Margin="0,10,0,0" Width="450" Height="47" FontSize="36" Foreground="White"/>
        <TextBlock x:Name="textBlockBody" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" Margin="12,62,12,40" Width="426" Background="White" FontSize="24"/>
        <Button x:Name="buttonSend" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="120,235,0,5" Height="25"/>
        <Button x:Name="buttonCancel" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,235,120,5" Height="25"/>
    </Grid>
</UserControl>
